{
  "name": "xrayradar-js",
  "version": "0.2.0",
  "private": true,
  "description": "XrayRadar JavaScript/TypeScript SDK monorepo (Node, Browser, React, Next.js)",
  "scripts": {
    "version": "node scripts/sync-version.mjs",
    "build": "npm run build -w @xrayradar/core && npm run build -w @xrayradar/node && npm run build -w @xrayradar/browser && npm run build -w @xrayradar/react && npm run build -w @xrayradar/nextjs",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "eslint .",
    "audit": "./scripts/security_audit.sh",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KingPegasus/XrayRadar-JS-SDK.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
