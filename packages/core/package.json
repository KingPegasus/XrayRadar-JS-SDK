{
  "name": "@xrayradar/core",
  "version": "0.2.0",
  "description": "XrayRadar SDK core - types, scope, breadcrumbs, transport interface",
  "keywords": [
    "xrayradar",
    "error-tracking",
    "observability",
    "monitoring",
    "sdk",
    "breadcrumbs",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KingPegasus/XrayRadar-JS-SDK.git"
  }
}
