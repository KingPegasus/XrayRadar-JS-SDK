{
  "name": "@xrayradar/nextjs",
  "version": "0.2.0",
  "description": "XrayRadar SDK for Next.js - server + client setup",
  "keywords": [
    "xrayradar",
    "error-tracking",
    "observability",
    "monitoring",
    "sdk",
    "nextjs",
    "next",
    "react",
    "javascript",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@xrayradar/node": "*",
    "@xrayradar/react": "*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "next": ">=13.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KingPegasus/XrayRadar-JS-SDK.git"
  }
}
